@using MvcCv.Models.Entity
@model List<Tbl_Yeteneklerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ string renk = "";}
@{ string label = "";}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Yetenek Listem</h3>
                                </div>
                                <div class="card-body">
                                    <a href="/Yetenek/YeniYetenek/" class=" btn btn-info">Yeni Yetenek Ekle</a>
                                    <br />  
                                    <br />  
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th style="width: 10px">#</th>
                                                <th>Task</th>
                                                <th>İlerleme</th>
                                                <th style="width: 40px">Yüzde</th>
                                                <th style=" width: 165px">İşlemler</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            
                                            @foreach (var item in Model)
                                            {
                                                if (item.Oran >= 0 && item.Oran <= 25)
                                                {
                                                    renk = "progress-bar bg-danger";
                                                    label = "badge bg-danger";
                                                }
                                                if (item.Oran >= 26 && item.Oran <= 50)
                                                {
                                                    renk = "progress-bar bg-warning";
                                                    label = "badge bg-warning";
                                                }
                                                if (item.Oran >= 51 && item.Oran <= 75)
                                                {
                                                    renk = "progress-bar bg-primary";
                                                    label = "badge bg-primary";
                                                }
                                                if (item.Oran >= 76 && item.Oran <= 100)
                                                {
                                                    renk = "progress-bar bg-success";
                                                    label = "badge bg-success";
                                                }
                                                <tr>
                                                    <td>@item.ID.</td>
                                                    <td>@item.Yetenek</td>
                                                    <td>
                                                        <div class="progress progress-xs">
                                                            <div class="@renk" style="width: @item.Oran%"></div>
                                                        </div>
                                                    </td>
                                                    <td><span class="@label">@item.Oran%</span></td>
                                                    <td>
                                                        <a class="btn btn-info btn-sm" href="/Yetenek/YetenekDuzenle/@item.ID">
                                                            <i class="fas fa-pencil-alt">
                                                            </i>
                                                            Düzenle
                                                        </a>
                                                        <a class="btn btn-danger btn-sm" href="/Yetenek/YetenekSil/@item.ID">
                                                            <i class="fas fa-trash">
                                                            </i>
                                                            Sil
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
</body>
</html>